<!-- Start Header -->
<header id="mu-hero" class="" role="banner">
  <!-- Start menu -->
  <nav class="col-12 navbar navbar-fixed-top navbar-default mu-navbar">
    <div class="container">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target="#header-list" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <!-- Logo -->
        <%= link_to 'Rails Girls CR', root_url, class: "navbar-brand"%>
      </div>
      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="header-list">
        <ul class="nav navbar-nav mu-menu navbar-right">
          <li>
            <%= link_to 'Home', root_url  %>
          </li>
          <li>
            <%= link_to 'Sobre nosotros', about_page_url %>
          </li>
          <li>
            <%= link_to 'Expositores', speakers_page_url %>
          </li>
          <li>
            <%= link_to 'Patrocinadores', sponsors_page_url %>
          </li>
          <li>
            <%= link_to 'Voluntarios', voluntaries_page_url %>
          </li>
        </ul>
      </div>
      <!-- /.navbar-collapse -->
    </div>
    <!-- /.container-fluid -->
  </nav>
  <!-- End menu -->
  <div class="mu-hero-overlay">
    <div class="container">
      <div class="mu-hero-area">
        <!-- Start hero featured area -->
        <div class="mu-hero-featured-area">
          <!-- Start center Logo -->
          <div class="mu-logo-area">
            <!-- text based logo -->
            <!-- image based logo -->
            <%= image_tag("face.png") %>
            <!-- <a class="mu-logo" href="#"><img src="assets/images/logo.jpg" alt="logo img"></a> -->
          </div>
          <!-- End center Logo -->
          <div class="mu-hero-featured-content">
            <h1><%= @event.title%></h1>
            <h2><%= @event.description%></h2>
            <p class="mu-event-date-line"><%= @event.short_description%></p>
            <div class="mu-event-counter-area">
              <div id="mu-event-counter" data-countdown="<%= @event.start_time.strftime("%Y-%m-%d %H:%M") %>"></div>
            </div>
          </div>
        </div>
        <!-- End hero featured area -->
      </div>
    </div>
  </div>
</header>
<!-- End Header -->
