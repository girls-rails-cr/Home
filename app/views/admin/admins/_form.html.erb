<div class="row">
  <%= form_for([:admin, @admin], as: admin, url: admin_admin_path(@admin), multipart: true) do |f| %>
    <% if @admin.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(admin.errors.count, "error") %> prohibited this event from being saved:</h2>
        <ul>
        <% @admin.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  <div class="col-md-8">
    <div class="card">
      <div class="header">
        <h4 class="title">Admins</h4>
      </div>
      <div class="content">
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <%= f.text_field :email, name: "email", label: "Email", class: "form-control" %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <%= f.text_field :password, name: "password",
                      label: false, placeholder: "12345678",
                      class: "form-control" %>
              </div>
            </div>
          </div>
          <%= f.submit 'Save', class: 'btn btn-info btn-fill pull-right'%>
          <div class="clearfix"></div>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card card-user">
      <div class="image">
        <img src="<%= @admin&.profile&.show_background %>" alt="..."/>
      </div>
      <div class="content">
        <div class="author">
             <%= show_avatar(@admin) %>
            <h4 class="title"><%= @admin.full_name %> <br/>
              <small> <%= @admin&.profile.username  %></small>
            </h4>
        </div>
        <p class="description text-center">
          <%= @admin&.profile&.about_me %>
        </p>
      </div>
      <hr>
    </div>
  </div>
<% end %>

</div>
