<div class="row">
  <%= form_with(model: [ :admin, @user], url: admin_profile_path, multipart: true ) do |f| %>
  <%= f.fields_for :profile do |profile| %>
  <div class="col-md-8">
    <div class="card">
      <div class="header">
        <h4 class="title">Editando el perfil</h4>
      </div>
      <div class="content">
          <div class="row">
            <div class="col-md-5">
              <div class="form-group">
                <%= profile.label :career, "Carrera"  %>
                <%= profile.text_field :career, class: "form-control"%>
              </div>
            </div>
            <div class="col-md-3">
              <div class="form-group">
                <%= profile.label :username, "Nombre de usario" %>
                <%= profile.text_field :username, class: "form-control"%>
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <%= f.label :email,"Correo" %>
                <%= f.email_field :email, class: "form-control"%>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <%= profile.label :first_name, "Primer nombre" %>
                <%= profile.text_field :first_name, class: "form-control"%>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <%= profile.label :last_name, "Segundo nombre" %>
                <%= profile.text_field :last_name, class: "form-control"%>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <%= profile.label :address, "DirecciÃ³n"%>
                <%= profile.text_field :address, class: "form-control"%>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-4">
              <div class="form-group">
                <%= profile.label :fb_link, "Link de Facebook" %>
                <%= profile.text_field :fb_link, class: "form-control"%>
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <%= profile.label :twitter_link, "Link de Twitter" %>
                <%= profile.text_field :twitter_link, class: "form-control"%>
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <%= profile.label 'Link de Linkedin ' %>
                <%= profile.text_field :linkedin, class: "form-control"%>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <%= profile.label :about_me,"Acerca de mi" %>
                <%= profile.text_area :about_me, class: "form-control"%>
              </div>
            </div>
          </div>
          <%= f.submit 'Guardar', class: 'btn btn-info btn-fill pull-right'%>
          <div class="clearfix"></div>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card card-user">
      <div class="image">
        <img src="<%= @user.profile.show_background %>" alt="..."/>
      </div>
      <div class="content">
        <div class="author">
             <%= show_avatar(@user) %>
             <label class="upload-avatar">
              <%= profile.file_field :avatar, accept: 'image/png,image/gif,image/jpeg', value: 'Upload', id: 'load_image'%>
              Cambiar  Imagen
            </label>
            <h4 class="title"><%= @user.full_name %> <br/>
              <small> <%= @user&.profile.username  %></small>
            </h4>
        </div>
        <p class="description text-center">
          <%= @user&.profile&.about_me %>
        </p>
      </div>
      <hr>
      <div class="text-center">
        <a href="<%= @user&.profile&.fb_link %>" class="btn btn-simple" target="_blank"><i class="fa fa-facebook-square"></i></a>
        <a href="<%= @user&.profile&.twitter_link %>" class="btn btn-simple" target="_blank"><i class="fa fa-twitter"></i></a>
        <a href="<%= @user&.profile&.linkedin %>" class="btn btn-simple" target="_blank"><i class="fa fa-linkedin-square"></i></a>
      </div>
    </div>
  </div>

  <% end %>
<% end %>

</div>
