<div class="row">
  <div class="small-5 columns">
    <h2>Rails Girls Admin</h2>
  </div>
  <div class="small-7 columns">
    <ul class="menu align-right">
      <% if current_user %>
        <li>Hola <strong><%= current_user.email %></strong>.</li>
        <li><%= link_to 'Editar Perfil', edit_user_registration_path, :class => 'navbar-link' %> </li>
        <li><%= link_to "Salir", destroy_user_session_path, method: :delete, :class => 'navbar-link' %></li>
      <% end %>
    </ul>
  </div>
</div>



<div class="row"><div class="small-4 large-centered columns">  <h2> <%= @subscribers.size %> Suscriptores</h2> </div></div>
<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Email</th>
      <th>Source</th>
      <th>Nivel</th>
      <th># telefono</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subscribers.each do |subscriber| %>
    <tr>
      <td><%= subscriber.name %></td>
      <td><%= subscriber.email %></td>
      <td><%= subscriber.source %></td>
      <td><%= subscriber.level_knowledge %></td>
      <td><%= subscriber.phone_number %></td>
    </tr>
    <% end %>
  </tbody>
</table>
