<div class="nested-fields">
  <div class="form-group">
    <%= f.text_field :name, required: true,
    autofocus: true, placeholder: "Domingo",
    class: "form-control"%>
  </div>
  <div id="schedule_details_form<%= f.object.id %>">
    <%= f.fields_for :schedule_details do |schedule_detail_form| %>
    <%= render partial: 'admin/events/schedule_detail_fields',
               locals: { f: schedule_detail_form } %>

    <% end %>
  </div>
  <%= link_to_add_association "Agregar detalle de hora", f, :schedule_details,
      partial: 'admin/events/schedule_detail_fields', class: "button add-activity-detail",
      :"data-association-insertion-node" => "#schedule_details_form#{f.object.id}",
      :"data-association-insertion-method" => :append %>
  <br>
  <br>
  <%= link_to_remove_association "Remover Day", f %>
</div>
<br>
