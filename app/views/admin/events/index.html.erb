<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="header text-center">
        <h4 class="title">Rails Girls Admin</h4>
        <p class="category"></p>
        <br>
      </div>
      <div class="content table-responsive table-full-width">
        <% if @events.present? %>
            <table id="events" class="table table-hover">
              <thead>
                <tr>
                  <th>Imagen de Fondo</th>
                  <th>Nombre/Descripción</th>
                  <th>Opciones</th>
                </tr>
              </thead>

              <tbody>
                <% @events.each do |event| %>
                <tr>
                  <td class="row-img" style="width:  150px;"><%= image_tag event&.background_image %></td>
                  <td WIDTH="800"> <%= event.title %> </br> <%= event.description %></td>
                  <td><%= link_to 'Editar', edit_admin_event_path(event) %>/<%= link_to 'Eliminar', admin_event_path(event), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
        <% else %>
          <p>Aún no existen Eventos.</p>
        <% end %>
        <%= link_to 'Crear Evento', new_admin_event_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
