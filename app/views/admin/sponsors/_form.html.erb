<div class="row">
  <%= form_with(model: [:admin, @sponsor], local: true) do |form| %>
  <% if sponsor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(sponsor.errors.count, "error") %> prohibited this admin_sponsor from being saved:</h2>

      <ul>
        <% sponsor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-md-12">
    <div class="card">
      <div class="header">
        <h4 class="title">Sponsor</h4>
      </div>
      <div class="content">
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <%= form.label :name %>
                <%= form.text_field :name, id: :sponsor_name, class: "form-control" %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <%= form.label :email_contact %>
                <%= form.text_field :email_contact, id: :sponsor_email_contact , class: "form-control"%>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <%= form.label :company %>
                <%= form.text_field :company, id: :sponsor_company, class: "form-control" %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <%= form.label :page_url %>
                <%= form.text_field :page_url, id: :sponsor_page_url, class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <%= form.label :description %>
                <%= form.text_area :description, id: :sponsor_description, class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-4">
              <div class="form-group">
                <label class="upload-avatar">
                 <%= form.file_field :logo, accept: 'image/png,image/gif,image/jpeg', value: 'Upload', class: 'load-image'%>
                 Upload Logo Image
               </label>
               <div id="preview-image">
                 <% if @sponsor.logo? %>
                    <%= image_tag(@sponsor&.logo) %>
                   <% end %>
               </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <%= form.label :status %>
                <%= form.select(:status, [["Active", "active"], ["Inactive", "inactive"], ["Pending", "pending"]], {}, {class: "form-control"}) %>
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <%= form.label :event_id, "Event" %>
                <%= form.collection_select :event_id, Event.active, :id, :title, {prompt: true}, {class: "form-control"} %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12"><%= form.submit 'Save', class: 'btn btn-info btn-fill pull-right'%></div>
          </div>

      </div>
    </div>
  </div>
 <% end %>
</div>
